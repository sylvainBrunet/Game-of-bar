<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/baseline_add_white_24">
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <gradient android:angle="-90"
                      android:startColor="@color/buttonBackground"
                      android:endColor="@color/buttonBackground"  />
        </shape>
    </item>
    <item android:state_focused="true"
        android:drawable="@drawable/baseline_add_white_24">
        <shape android:shape="oval"  >
            <corners android:radius="5dip" />
            <solid android:color="#0984e3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"
            android:drawable="@drawable/baseline_add_white_24">
            <corners android:radius="5dip" />
            <gradient android:angle="-90"
                      android:startColor="@color/buttonBackground"
                      android:endColor="@color/buttonBackground"  />
        </shape>
    </item>
    <item android:drawable="@drawable/baseline_add_white_24">
    </item>


</layer-list>